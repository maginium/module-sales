<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Indexer/etc/indexer.xsd">
    <!-- Defines the 'orders' indexer and links it to the 'Fulltext' model. -->
    <indexer class="Maginium\OrderElasticIndexer\Models\Indexer\Fulltext" id="orders" view_id="orders">
        <!-- Title for the indexer, supports translation. -->
        <title translate="true">Orders</title>

        <!-- Description for the indexer, supports translation. -->
        <description
            translate="true"
        >Responsible for reindexing order data into the ElasticSearch index for optimized search and retrieval performance.</description>
    </indexer>
</config>
